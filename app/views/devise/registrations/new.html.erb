<div class="container">
  <div class="mx-auto">
    <h2 class="my-5" id="page-title">新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-horizontal">

      <div class="form-group row">
        <%= f.label :last_name, class: "col-sm-3 control-label text-right offset-sm-1" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control col-sm-2" %>

        <%= f.label :first_name, class: "col-sm-1 control-label text-right" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control col-sm-2" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-sm-3 control-label text-right offset-sm-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-5" %>
      </div>

      <div class="form-group row">
        <div class="col-sm-3 control-label text-right offset-sm-1">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-5"  %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-sm-3 control-label text-right offset-sm-1" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-5" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "新規登録", class: "btn btn-success d-block mx-auto btn-lg" %>
      </div>
    </div>
    <% end %>
  </div>
</div>